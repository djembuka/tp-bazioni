@import '../../styl/component-include.styl'

.b-wa
  --transition-duration: 0.4s;
  --transition-easing: cubic-bezier(0.25, 0.74, 0.22, 0.99);
  --button-background-size: 32px;
  --btn-height: 32px;
  --icon-width: var(--btn-height);

.b-wa
  position fixed
  bottom 32px
  right 32px
  z-index 10000

  @media(min-width 768px)
    display none

  span
    overflow: visible;
    width: 64px;
    height: 64px;
    position: relative;
    cursor: pointer;
    user-select: none;
    display: flex;
    align-items: center;
    justify-content: center;
    transition-property: color;
    transition-duration: 0.4s;
    transition-timing-function: cubic-bezier(0.25, 0.74, 0.22, 0.99);
    padding: 0 33px 0 32px;
    text-decoration: none;
    box-sizing border-box

    &:after
      box-shadow(inset 0 0 0 32px #00d95f);
      border-radius: 32px;
      animation: button-pulse 3s ease-in-out infinite;
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
      transition-property: box-shadow;
      transition-duration: 0.4s;
      transition-timing-function: cubic-bezier(0.25, 0.74, 0.22, 0.99);
      z-index: 1;

    svg
      pointer-events: none;
      transition: none;
      vertical-align: middle;
      transition-property: color, transform, opacity;
      transition-duration: 0.4s;
      transition-timing-function: cubic-bezier(0.25, 0.74, 0.22, 0.99);
      display: inline-block;
      width: calc(64px * .9);
      height: calc(64px * .9);
      flex-shrink: 0;
      position: relative;
      z-index: 10;

    // &:hover

    //   &:after
    //     box-shadow(inset 0 0 0 1px #00d95f);

    //   svg path
    //     fill #00d95f


@keyframes button-pulse
  0%,
  to
    transform: scale(1);
    animation-timing-function: cubic-bezier(0.71, 0.01, 0.66, 0.99);

  50%
    transform: scale(1.1);
    animation-timing-function: cubic-bezier(0.41, 0, 0.07, 1);

